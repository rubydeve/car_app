<%= render "shared/header"%>
<div class="main-panel">
	<%= render "shared/sidebar"%>

	<div class="content">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="card">
						<div class="header">
							<h4 class="title">Expenses</h4>
						</div>

						<div class="content">
							<div class="row">
								<div class=" col-md-12">
									<table class="table">
										<tbody>
											<tr>
												<td>Expense Date</td> 
												<td><%= @expense.datetime.to_s.split('UTC')[0] %></td>
											</tr> 
											<tr>
												<td>Expense For ?</td> 
												<td><%= @expense.name %></td>
											</tr> 
											<tr>
												<td>Expense Price</td> <td><%= @expense.price %></td>
											</tr>  
											
										</tbody>
									</table>


								</div>

							</div>
						</div>
					</div>

				</div>
			</div>
		</div>

	</div>
	 <%= render "shared/footer"%>
</div>
