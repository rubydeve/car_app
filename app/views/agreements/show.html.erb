<%= render "shared/header"%>
<div class="main-panel">
	<%= render "shared/sidebar"%>
	<div class="content">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="card">
						<div class="header">
							<h4 class="title">Expenses</h4>
						</div>

						<div class="content">
							<div class="row">
								<div class=" col-md-12">
									<table class="table">
										<tbody>
											<tr>
												<th>Start Date</th>
												<td><%= @agreement.start_date.to_s.split('UTC')[0] %>
												</td>
												
											</tr> 
											<tr>
												<th>End Date</th>
												<td><%= @agreement.end_date.to_s.split('UTC')[0] %></td>
											</tr> 
											<tr>
												<th>First name</th><td><%= @agreement.first_name %></td>

											</tr>  
											<tr>
												<th>Last name</th><td><%= @agreement.last_name %></td>
												
											</tr>
											<tr>
												<th>Status</th>
												<% if @agreement.is_paid == "unpaid" %>
												<td><label class="label label-danger white">UNPAID</label></td>
												<% elsif @agreement.is_paid == "paid"%>
												<td><label class="label label-success white">PAID</label></td>
												<% else%>
												<td><label class="label label-primary white">VOID</label></td>
												<% end %>
											</tr>
											
										</tbody>
									</table>


								</div>

							</div>
						</div>
					</div>

				</div>
			</div>
		</div>
	</div>
	   <%= render "shared/footer"%>
</div>
