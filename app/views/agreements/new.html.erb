 	<%= render "shared/header"%>
 	<div class="main-panel">
 		<%= render "shared/sidebar"%>

 		<div class="content">
 			<div class="container-fluid">
 				<div class="row">
 					<div class="col-lg-12">
 						<div class="card">
 							<div class="header">
 								<h4 class="title">New Agreement</h4>
 							</div>
 							<div class="content">
 								<%= form_for @agreement,url: agreements_url do |f|%>
 								
 								<div class="row">
 									<div class="col-md-6">
 										<div class="form-group">
 											<label>First Name</label>
 											<%= f.text_field :first_name,:class=>"form-control border-input"%>
 										</div>
 									</div>
 									<div class="col-md-6">
 										<div class="form-group">
 											<label>Last Name</label>
 											<%= f.text_field :last_name,:class=>"form-control border-input"%>
 										</div>
 									</div>
 								</div>

 								<div class="row">
 									<div class="col-md-6">
 										<div class="form-group">
 											<label>Phone Number</label>
 											<%= f.text_field :phone_number,:class=>"form-control border-input"%>
 										</div>
 									</div>
 									<div class="col-md-6">
 										<div class="form-group">
 											<label>Car Rent</label>
 											<%= f.text_field :price,:class=>"form-control border-input"%>
 										</div>
 									</div>
 								</div>
 								<div class="row">
 									<div class="col-md-6">
 										<div class="form-group">
 											<label>Start date</label>
 											<%= f.text_field :start_date ,:id=>"start_time",:class=>"form-control border-input", :readonly => true%>
 											
 										</div>
 									</div>
 									<div class="col-md-6">
 										<div class="form-group">
 											<label>End date</label>
 											<%= f.text_field :end_date ,:id=>"end_time",:class=>"form-control border-input", :readonly => true%>
 										</div>
 									</div>
 								</div>

 								<div class="row">
 									<div class="col-md-6">
 										<div class="form-group">
 											<label>Bill</label>
 											<%= f.select(:is_paid, [["Paid", "paid"],["Unpaid", "unpaid"]],{},:class=> "form-control border-input") %>
 										</div>
 									</div>

 									<div class="col-md-6">
 										<div class="form-group">
 											<label>Type</label>
 											<%= f.select(:is_current, [["Advance Booking", "true"],["Current Booking", "false"]],{},:class=> "form-control border-input") %>
 										</div>
 									</div>
 								</div>
 								<div class="text-center">
 									<button type="submit" class="btn btn-info btn-fill btn-wd">Continue</button>
 								</div>
 								<div class="clearfix"></div>

 								<% end %>
 							</div>
 						</div>
 					</div>


 				</div>
 			</div>
 		</div>
 		   <%= render "shared/footer"%>
 	</div>
 	<script type="text/javascript">


 		$('#start_time').datetimepicker({
 			dateFormat: "yy-mm-dd",
 			timeFormat:  "hh:mm:ss",
 			onClose: function(dateText, inst) {
 				if (endDateTextBox.val() != '') {
 					var testStartDate = $('#start_time').datetimepicker('getDate');
 					var testEndDate = $("#end_time").datetimepicker('getDate');
 					if (testStartDate > testEndDate)
 						$("#end_time").datetimepicker('setDate', testStartDate);
 				}
 				else {
 					$("#end_time").val(dateText);
 				}
 			},
 			onSelect: function (selectedDateTime){
 				$("#end_time").datetimepicker('option', 'minDate', $('#start_time').datetimepicker('getDate') );
 			}
 		});



 		$('#end_time').datetimepicker({
 			minDate: $("#start_time").val(),
 			dateFormat: "yy-mm-dd",
 			timeFormat:  "hh:mm:ss",
 			onClose: function(dateText, inst) {
 				if ($('#start_time').val() != '') {
 					var testStartDate = $('#start_time').datetimepicker('getDate');
 					var testEndDate = $("#end_time").datetimepicker('getDate');
 					if (testStartDate > testEndDate)
 						$('#start_time').datetimepicker('setDate', testEndDate);
 				}
 				else {
 					$('#start_time').val(dateText);
 				}
 			},
 			onSelect: function (selectedDateTime){
 				$('#start_time').datetimepicker('option', 'maxDate', $("#end_time").datetimepicker('getDate') );
 			}
 		});




 	</script>
