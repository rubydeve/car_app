<%= render "shared/header"%>
<div class="main-panel">
	<%= render "shared/sidebar"%>
	<div class="content">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="card">
						<div class="header">
							<h4 class="title"></h4>
						</div>
						<div class="content">
							<div class="content table-responsive table-full-width">
								<div class="bootstrap-table">
									<div class="fixed-table-toolbar">
										<div class="pull-left search">
											<!-- <input class="form-control" type="text" placeholder="Search"> -->
										</div>
									</div>
									<div class="fixed-table-container" style="padding-bottom: 0px;">
										<div class="fixed-table-body">
											<table class="table table-striped table-hover text-center" >
												<thead>
													<tr>
														<th class="text-center">
															<div class="th-inner ">
																Start Date 
															</div>
															<div class="fht-cell"></div>
														</th>
														<th class="text-center">
															<div class="th-inner ">
																End Date 
															</div>
															<div class="fht-cell"></div>
														</th>
														<th class="text-center">
															<div class="th-inner ">
																First name
															</div>
															<div class="fht-cell"></div>
														</th>
														<th class="text-center">
															<div class="th-inner ">
																Last name
															</div>
															<div class="fht-cell"></div>
														</th>
														<th class="text-center">
															<div class="th-inner ">
																Status
															</div>
															<div class="fht-cell"></div>
														</th>
														<th class="text-center">
															<div class="th-inner ">
																Operation
															</div>
															<div class="fht-cell"></div>
														</th>
													</tr>
												</thead>
												<tbody>
													<% @agreements.each do |agreement|%>
													<tr>
														<td><%= agreement.start_date.to_s.split('UTC')[0] %></td>
														<td><%= agreement.end_date.to_s.split('UTC')[0] %></td>
														<td><%= agreement.first_name %></td>
														<td><%= agreement.last_name %></td>
														<% if agreement.is_paid == "unpaid" %>
														<td><label class="label label-danger white">UNPAID</label></td>
														<% elsif agreement.is_paid == "paid"%>
														<td><label class="label label-success white">PAID</label></td>
														<% else%>
														<td><label class="label label-primary white">VOID</label></td>
														<% end %>
														<td>
															<%= render partial: "link",locals: { agreement: agreement}%>
														</td>
													</tr>
													<% end %>
												</tbody>
											</table>
										</div>
										<div class="fixed-table-pagination">
											<div class="pull-right pagination">
												<%= will_paginate @agreements,renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>

											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	   <%= render "shared/footer"%>
</div>